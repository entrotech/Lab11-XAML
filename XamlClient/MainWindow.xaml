<Window x:Class="XamlClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Client Using XAML"
        FontSize="16" SizeToContent="WidthAndHeight" >
    <Canvas Width="300" Height="200" Background="SteelBlue">
        <TextBlock Canvas.Left="20" Canvas.Top="20"
            Text="Please enter your name:" />
        <TextBox Canvas.Left="20" Canvas.Top="50" Width="150"
            x:Name="InputTextBox" />
        <Button Canvas.Left="170" Canvas.Top="50"
            x:Name="Button" Content="Run"
            Click="Button_Click"  />
        <TextBlock x:Name="ResultTextBlock" 
            Canvas.Left="20" Canvas.Top="80" />
        <Button Canvas.Right="20" Canvas.Bottom="20"
            Content="Throw Exception"
            x:Name="ThrowButton"
            Click="ThrowButton_Click" />
    </Canvas>
</Window>

